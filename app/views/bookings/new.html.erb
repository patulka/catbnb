<div class="container">
  <div class="booking-form">
    <h1>Take your kitty home</h1>
    <%= simple_form_for [@cat, @booking] do |f| %>
      <%= f.input :date_from, :as => :date, html5: true, placeholder: "22/04/2021" %>
      <%= f.input :date_to, :as => :date, html5: true, placeholder: "22/04/2021" %>
      <%= f.submit class: 'btn yellow-button' %>
    <% end %>
  </div>
  <div class="links-to-pages">
    <%= link_to 'Back to all cats', cats_path, class: "btn btn-light" %>
  </div>
</div>
