<%= link_to 'Back to all cats', cats_path, class: "btn btn-outline-secondary back-button", id: "top-backlink"%>

<div class="container">
  <div class="main-container">
    <h1>My bookings</h1>

    <% @bookings.each do |booking| %>
      <div class="card-landscape">
        <% if booking.cat.picture_url != '' %>
          <%= image_tag booking.cat.picture_url%>
        <% else %>
          <%= cl_image_tag booking.cat.photo.key %>
        <% end %>
        <div class="card-landscape-infos">
          <h2> <%= link_to "#{booking.cat.name}", cat_path(booking.cat) %> </h2>
          <p>
            booked from <strong> <%= booking.date_from %> </strong> to <strong><%= booking.date_to %></strong>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>

