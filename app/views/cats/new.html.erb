<%= link_to 'Back to all cats', cats_path, class: "btn btn-outline-secondary back-button", id: "top-backlink"%>
<div class="container">
  <div class="booking-form">
    <h1 class="text-center m-0" style="background-color: white">Add a cat üê±</h1>
    <%= simple_form_for @cat do |f| %>
      <div class="flex-container new-cat-form">
        <div class="form-half">
          <%= f.input :name, placeholder: "Kitty" %>
          <%= f.input :breed, placeholder: "Persian" %>
          <%= f.input :color, placeholder: "Silver" %>
          <%= f.input :age, input_html: {min: 0, max: 30, value: 0}%>
          <%= f.input :city, placeholder: "Zurich" %>
        </div>
        <div class="form-half">
          <div class="d-flex flex-column" style="height: 100%;">
            <div style="flex: 1 1 auto">
              <%= f.input :description, placeholder: "What is the cat's favourite food? What does it like to do? Does it like kids?" %>
            </div>
            <div style="flex: 0 1 auto">
              <br>
              <%= f.input :picture_url %>
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex align-items-center" style="background-color: white">
        <%= f.button :submit, class: 'btn yellow-button' %>
      </div>
    <% end %>
  </div>
</div>
