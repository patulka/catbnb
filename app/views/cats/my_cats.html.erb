<div class="container">
  <div class="main-container">
    <h1>My cats</h1>

    <% @cats.each do |cat| %>
      <div class="card-landscape">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-landscape-infos">
          <h2> <%= link_to "#{cat.name}", cat_path(cat) %> </h2>
          <p>
            <%= cat.breed %> (<%= cat.color %>)
          </p>
        </div>
      </div>
    <% end %>

  </div>
    <%= link_to "View all cats", cats_path, class: "btn btn-info" %>
</div>
